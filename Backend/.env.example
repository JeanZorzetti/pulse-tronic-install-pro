# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/pulsetronic

# Redis (opcional para cache e filas)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=contato@pulsetronic.com.br
SMTP_PASS=your-app-password
SMTP_FROM=Pulse Tronic <contato@pulsetronic.com.br>

# Admin Email (para receber notificações)
ADMIN_EMAIL=admin@pulsetronic.com.br

# WhatsApp API (Twilio exemplo)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=+14155238886
ADMIN_WHATSAPP=+5511999999999

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Frontend URLs (para CORS)
FRONTEND_URL=http://localhost:8080
ADMIN_URL=http://localhost:3001

# Upload Configuration (AWS S3 - opcional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=pulsetronic-uploads
AWS_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10

# Sentry (Error Tracking - opcional)
SENTRY_DSN=your-sentry-dsn
